@model IEnumerable<Brand>


<table class="table table-striped">
    <thead>
        <tr>
           
            <th scope="col">Image</th>
            <th scope="col">Status</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Brand brand in Model)
        {
            
            <tr>
              
                <td><img src="~/assets/img/brand/@brand.Image"/></td>
                
                <td style="color:@(brand.IsDeleted ? "red":"green")">@(brand.IsDeleted ? "DeActive":"Active")</td>
                <td>
                   
                    <a class="btn btn-warning" asp-action="Update" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-route-id="@brand.Id">Update</a>
                    <a id="@(brand.IsDeleted ? "restoreTag":"deleteTag")" class="btn @(brand.IsDeleted ? "btn-primary":"btn-danger")" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-action="@(brand.IsDeleted ? "Restore":"Delete")" asp-route-id="@brand.Id">@(brand.IsDeleted ? "Restore":"Delete")</a>
                </td>
            </tr>
        }
    </tbody>
</table>

