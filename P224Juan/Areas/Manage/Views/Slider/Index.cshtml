@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-6">
    <h1>Sliders</h1>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Title</th>
                    <th scope="col">SubTitle</th>
                    <th scope="col">Description</th>




                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model)
                {
                    <tr>
                      <td></td>
                        <td><img style="width:50%" src="~/assets/img/slider/@slider.Image" alt="Alternate Text" /></td>
                        <td>@slider.Title</td>
                        <td>@slider.SubTitle</td>
                        <td>@slider.Description</td>


                        <td>
                            <a class="btn btn-primary" asp-action="Detail">Detail</a>
                            <a class="btn btn-warning" asp-action="Update">Update</a>
                        </td>

                    </tr>
                }

            </tbody>
         
        </table>
    </div>
</div>

