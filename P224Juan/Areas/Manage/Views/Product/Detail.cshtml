@model Product
@{
    ViewData["Title"] = "Detail";
    string tags = "";
    string colors = "";
    string sizes = "";
}

   


<div class="row">
    <div class="col-lg-12">
        <h1>Product Detail</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">DiscountPrice</th>
                    <th scope="col">Tags</th>
                    <th scope="col">Color</th>
                    <th scope="col">Size</th>


                </tr>
            </thead>
            <tbody>
                <tr>
                    
                   
                  
                    <th scope="row">1</th>
                    <td><img src="~/assets/img/product/@Model.MainImage" /></td>
                    <td>@Model.Name</td>
                    <td>@Model.Price</td>
                    <td>@Model.DiscountPrice</td>
                    <td>@(tags=string.Join(", ", @Model.ProductTags.Select(x => x.Tag.Name)))</td>
                    <td> @(colors=string.Join(", ", @Model.ProductColorSizes.Select(x => x.Color?.Name)))</td>
                    <td>@(Model.ProductColorSizes.FirstOrDefault().Size?.Name) </td>


                </tr>
             
            </tbody>
        </table>
        <div class="col-lg-6">
            <a class="btn btn-primary" asp-action="Index" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Go To List</a>
        </div>
    </div>
</div>

