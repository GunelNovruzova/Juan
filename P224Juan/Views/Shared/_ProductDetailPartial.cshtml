@model Product
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <!-- product details inner end -->
    <div class="product-details-inner">
        <div class="row">
            <div class="col-lg-5">
                <div class="product-large-slider mb-20">
                    @foreach (ProductImage productImage in Model.ProductImages)
                    {
                        <div class="pro-large-img img-zoom">
                            <img src="assets/img/product/@productImage.Image" alt="product thumb" />
                        </div>
                    }

                </div>
                <div class="pro-nav slick-row-5">
                    @foreach (ProductImage productImage in Model.ProductImages)
                    {
                        <div class="pro-nav-thumb"><img src="assets/img/product/@productImage.Image" alt="" /></div>
                    }
                </div>

            </div>
            <div class="col-lg-7">
                <div class="product-details-des">
                    <h3 class="pro-det-title">@Model.Name</h3>
                    <div class="pro-review">
                        <span><a href="#">1 Review(s)</a></span>
                    </div>
                    <div class="price-box">
                        @if (Model.DiscountPrice > 0)
                        {

                            <span class="regular-price">$@Model.Price.ToString("0.00")</span>
                            <span class="old-price"><del>$@Model.DiscountPrice.ToString("0.00")</del></span>
                        }
                        else
                        {
                            <span class="regular-price">$@Model.Price.ToString("0.00")</span>

                        }
                    </div>
                    <p>@Model.Description</p>
                    <form id="basketform" method="get" asp-controller="product" asp-action="AddBasket" asp-route-id="@Model.Id">
                        <div class="form-group col-lg-4">
                            <label>Select Color</label>
                            <select name="ColorIds[]" class="form-control" id="selectColor" asp-items="@new SelectList(ViewBag.Colors, nameof(Color.Name), nameof(Color.Name))">
                            </select>
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label>Size</label>
                            <select name="SizeIds[]" class="form-control" id="selectSize" asp-items="@new SelectList(ViewBag.Sizes, nameof(Size.Name), nameof(Size.Name))">
                            </select>
                            <span class="text-danger"></span>
                        </div>
                        <div class="quantity">
                            <div class="pro-qty"><input type="text" id="productcount" value="1"></div>
                        </div>
                    </form>
                      <button form="basketform" type="submit" id="addbasketbtn" class="btn btn-default addToBasket">Add To Cart</button>
                  
                    <div class="availability mb-20">
                        <h5 class="cat-title">Availability:</h5>
                        <span>In Stock</span>
                    </div>
                    <div class="share-icon">
                        <h5 class="cat-title">Share:</h5>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <!-- product details inner end -->
    </div>
</div>

